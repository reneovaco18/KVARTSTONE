<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_icon_dragon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minion"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/cardCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="14sp"
                    android:textColor="@color/mana_blue"
                    android:background="@drawable/mana_crystal"
                    android:padding="4dp"
                    android:minWidth="24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/cardRarity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/customIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/custom_card_indicator"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/delete_button_background"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete card" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
