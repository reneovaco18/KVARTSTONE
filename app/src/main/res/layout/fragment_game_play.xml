<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E7D32">

    <!-- Top Status Bar with Bot Hero -->
    <LinearLayout
        android:id="@+id/topStatusBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#1B5E20"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Game Status (Left Side) -->
        <TextView
            android:id="@+id/gameStatusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your turn - Turn 1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"/>

        <!-- Bot Hero (Center) -->
        <LinearLayout
            android:id="@+id/botHeroArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/botHeroImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_hero_bot"
                android:background="@drawable/hero_frame"/>

            <TextView
                android:id="@+id/botHeroHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health: 30/30"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Turn Number (Right Side) -->
        <TextView
            android:id="@+id/turnNumberText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Turn: 1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="end|center_vertical"/>

    </LinearLayout>

    <!-- Bot Board -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/botBoardRecyclerView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/topStatusBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Player Board -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerBoardRecyclerView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/controlsArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Controls Area with Player Hero -->
    <LinearLayout
        android:id="@+id/controlsArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#4CAF50"
        app:layout_constraintBottom_toTopOf="@id/playerHandRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mana (Left Side) -->
        <TextView
            android:id="@+id/playerManaText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mana: 1/1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="start|center_vertical"/>

        <!-- Player Hero (Center) -->
        <LinearLayout
            android:id="@+id/playerHeroArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/playerHeroImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_hero_player"
                android:background="@drawable/hero_frame"/>

            <TextView
                android:id="@+id/playerHeroHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health: 30/30"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Buttons (Right Side) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <Button
                android:id="@+id/heroPowerButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Hero Power"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:minWidth="80dp"/>

            <Button
                android:id="@+id/endTurnButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="End Turn"
                android:textSize="11sp"
                android:backgroundTint="#FF5722"
                android:minWidth="80dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Player Hand -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerHandRecyclerView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#66BB6A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
